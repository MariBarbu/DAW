@model TaskManagement.Models.Project
@{
    ViewBag.Title = "Edit";
}

<h2>Edit this project</h2>

<form method="post" action="/Projects/Edit/@Model.ProjectId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <br />
    @Html.HiddenFor(m => m.ProjectId)
    @Html.Label("ProjectTitle", "Project Title")
    <br />
    @Html.EditorFor(m => m.ProjectTitle)
    @Html.ValidationMessageFor(m => m.ProjectTitle, null, new { @class = "text-danger " })

    <br /><br />
    @Html.Label("Description", "Project Description")
    <br />
    @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger " })

    <br /><br />
    @Html.Label("ProjectDeadline", "Project Deadline")
    <br />
    @Html.EditorFor(m => m.ProjectDeadline, new { htmlAttributes = new { @type = "date" } })
    @Html.ValidationMessageFor(m => m.ProjectDeadline, null, new { @class = "text-danger " })
    <br /><br /><br />
    <label>Select a team to assign this project to!</label>
    @Html.DropDownListFor(m=>m.TeamId,
                           new SelectList(Model.TeamNames,"Value","Text"),
                           "Select a team to assign this project to!",
                           new { @class="form-control"})
   
    <br /><br />
    <button class="btn btn-sm btn-success" id="butona" type="submit">Edit Project</button>
</form>
    


